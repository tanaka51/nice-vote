= form_for [@vote, @answer] do |f|
  - if @answer.errors.any?
    #error_explanation
      %h2= "#{pluralize(@answer.errors.count, "error")} prohibited this answer from being saved:"
      %ul
        - @answer.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user_name
    = f.text_field :user_name
  .field
    = f.label :comment
    = f.text_area :comment

  .actions
    = f.submit 'Save'
