= form_for @vote do |f|
  - if @vote.errors.any?
    #error_explanation
      %h2= "#{pluralize(@vote.errors.count, "error")} prohibited this vote from being saved:"
      %ul
        - @vote.errors.full_messages.each do |msg|
          %li= msg

  %h2 基本情報
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :password
    = f.text_field :password
  .field
    = f.label :closed
    = f.check_box :closed

  %h2 項目
  = f.fields_for :items do |item_f|
    .field
      = item_f.label :name
      = item_f.text_field :name
    .field
      = item_f.label :addition
      = item_f.text_area :addition
  .actions
    = f.submit 'Save'
